<script>
    document.addEventListener("DOMContentLoaded", function () {
        const editContainers = document.querySelectorAll(".edit");
        
        editContainers.forEach((editContainer) => {
            const editButton = editContainer.querySelector(".edit-button");
            const staticContent = editContainer.querySelector(".static-content");
            const editableContent = editContainer.querySelector(".editable-content");
            const saveButton = editContainer.querySelector(".save-button");

            editButton.addEventListener("click", () => {
                // Masquer le contenu statique et afficher le champ √©ditable et le bouton "Sauvegarder"
                staticContent.style.display = "none";
                editableContent.style.display = "block";
                saveButton.style.display = "block";
            });

            saveButton.addEventListener("click", () => {
                // R√©cup√©rer le contenu √©dit√© et mettre √† jour le contenu statique
                const newContent = editableContent.value;
                staticContent.textContent = newContent;

                // Masquer le contenu √©ditable et le bouton "Sauvegarder" et afficher le contenu statique
                staticContent.style.display = "block";
                editableContent.style.display = "none";
                saveButton.style.display = "none";
            });
        });
    });
