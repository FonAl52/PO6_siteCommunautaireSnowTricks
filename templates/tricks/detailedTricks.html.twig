{% extends 'base.html.twig' %}

{% block title %}üèÇ Snow Tricks - Tricks Title
{% endblock %}

{% block body %}
            <section>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mt-4">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning mt-4">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="container-fluid p-0">
                    <div class="position-relative">
                        <!-- Boutons avec ic√¥nes (stylo et poubelle) en haut √† droite -->
                        <div class="position-absolute top-0 end-0 m-3">
                            {% if currentUser is not null and currentUser == tricks.user %}
                                <a class="btn btn-link" href="{{ path('edit.tricks', {slug: tricks.slug}) }}"><i class="bi bi-pencil-fill me-2"></i></a>
                                <a class="btn btn-link" href="{{ path('delete.tricks', {slug: tricks.slug}) }}" onclick="return confirm('Voulez-vous supprimer d√©finitivement cet article ?')"><i class="bi bi-trash-fill"></i></a>
                            {% endif %}
                        </div>
                            {% if tricks.tricksImage|length > 0 %}
                                {% for image in tricks.tricksImage %}
                                    <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ tricks.title }}" class="tricks_hero_image"/>                                        {% endfor %}
                                {% else %}
                                    <img src="../images/tricksImages/pexels-dennis-leinarts-1748597.jpg" alt="{{ tricks.title }}" class="tricks_hero_image"/>
                                {% endif %}
                        <!-- Titre superpos√© -->
                        <h1 class="fw-bolder mb-1 position-absolute top-50 start-50 translate-middle" style="color: #fff; transform: translate(-50%, -50%); z-index: 1;">{{ tricks.title }}</h1>
                    </div>
                </div>
            </section>
            <section class="py-5">
                <div class="container px-5 my-5">
                    <div class="row gx-5">
                            <!-- Post content-->
                            <article>
                                <section class="mb-5 d-flex justify-content-between align-items-center">
                                    <div class="card h-60 shadow border-0">
                                        {% if tricks.tricksImage|length > 0 %}
                                            {% for image in tricks.tricksImage %}
                                                <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ tricks.title }}" class="tricks_underHero_image"/>
                                            {% endfor %}
                                        {% else %}
                                            <img src="../images/tricksImages/pexels-dennis-leinarts-1748597.jpg" alt="{{ tricks.title }}" class="tricks_underHero_image"/>
                                        {% endif %}
                                    </div>
                                </section>
                                <!-- Post content-->
                                <section class="mb-5">
                                    <p class="fs-5 mb-4">{{ tricks.description }}</p>
                                </section>
                                <section class="mb-5">
                                    <div class="container mt-4">
                                        <div class="row">
                                            <div class="col-12">
                                                <!-- Post meta content -->
                                                <div class="text-muted fst-italic mb-2">Mis en ligne le {{ tricks.createdAt|date('d/m/Y') }}</div>
                                                <!-- Post categories -->
                                                {% for group in tricks.idGroup %}
                                                    <a class="badge bg-secondary text-decoration-none link-light" href="#!">{{ group.getName() }}</a>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </article>
                            <!-- Comments section-->
                            <section>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <!-- Comment form-->
                                        {% if app.user %}
                                        <div class="m-4">
                                        {{ form(form) }}
                                        </div>
                                        {% else %}
                                        <div class="m-4">
                                            <div class="fw-bold">Pour laisser un commentaire vous devez √™tre connecter</div>
                                            <a class="btn btn-primary btn-lg px-4 me-sm-3 mt-4" href="{{ path('security.login') }}">Connexion</a>
                                            <a class="btn btn-secondary btn-lg px-4 me-sm-3 mt-4" href="{{ path('security.registration') }}">Inscription</a>
                                        </div>
                                        {% endif %}
                                        <!-- Single comment-->
                                        {% for comments in tricks.comments %}
                                            <div class="d-flex m-4">
                                                {% if comments.author.imageName %}
                                                <div class="flex-shrink-0"><img class="rounded-circle profile-picture" src="../images/userImages/{{ comments.author.imageName }}" alt="{{ comments.author }}'s image profile" /></div>
                                                {% else %}
                                                <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                                                {% endif %}
                                                <div class="ms-3">
                                                    <div class="fw-bold">{{ comments.author }}</div>
                                                    {{ comments.content|raw }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </section>
{% endblock %}
