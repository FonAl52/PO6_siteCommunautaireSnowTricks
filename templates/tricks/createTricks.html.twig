{# templates/tricks/createTricks.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}üèÇ Snow Tricks - Cr√©ation de Tricks{% endblock %}

{% block body %}
<section class="py-5 mt-4" style="min-height: 80vh;">
    <div class="container px-5 h-100">
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5 h-100">
            <div class="text-center mb-5 mt-4">
                <h1 class="fw-bolder">Cr√©ation de Tricks</h1>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning mt-4">
                    {{ message }}
                </div>
            {% endfor %}
            <form method="post" action="{{ path('create.tricks') }}" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">{{ form_label(form.title) }}</label>
                    {{ form_widget(form.title) }}
                </div>
                <div class="form-group">
                    <label for="">{{ form_label(form.description) }}</label>
                    {{ form_widget(form.description) }}
                </div>
                <div id="imageFields">
                    <div class="form-group">
                        <label for="">{{ form_label(form.tricksImage) }}</label>
                        <input type="file" class="form-control-file" name="tricks[tricksImage][]" id="tricksImage">
                    </div>
                </div>

            {{ form(form) }}
            </form>
        </div>
    </div>
</section>
{% endblock %}
