{# templates/tricks/createTricks.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}üèÇ Snow Tricks - Cr√©ation de Tricks{% endblock %}

{% block body %}
<section class="py-5 mt-4" style="min-height: 80vh;">
    <div class="container px-5 h-100">
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5 h-100">
            <div class="text-center mb-5 mt-4">
                <h1 class="fw-bolder">Cr√©ation de Tricks</h1>
            </div>

            {% for message in app.flashes('success') %}
